<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        app:cardElevation="@dimen/card_view_elevation"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/card_layout_margin"
            android:layout_marginEnd="@dimen/card_layout_margin"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/item_text_margin"
            android:layout_marginBottom="@dimen/item_text_margin">

            <ImageView
                android:id="@+id/league_image"
                android:layout_width="@dimen/sport_image_width"
                android:layout_height="@dimen/sport_image_height"
                android:layout_marginEnd="@dimen/sport_image_margin"
                android:contentDescription="@string/icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/league_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="League"
                    android:textSize="@dimen/text_size_regular"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/item_text_margin"
                    android:layout_marginBottom="@dimen/item_text_margin">

                    <TextView
                        android:id="@+id/sport_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Soccer"
                        android:textSize="@dimen/sport_format_text_size"
                        android:textColor="@color/format_color"
                        android:fontFamily="sans-serif-light"/>

                    <TextView
                        android:id="@+id/league_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sport_format_text_size"
                        tools:text="Male"
                        android:textColor="@color/format_color"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginStart="@dimen/item_text_margin"
                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/league_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="England"
                    android:textSize="@dimen/sport_format_text_size"
                    android:textColor="@color/format_color"
                    android:fontFamily="sans-serif-light"/>





            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>